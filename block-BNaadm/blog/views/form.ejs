<%- include(`partials/header`) -%>
<main>
    <div class="articleslist">
        <h1>Enter Article details</h1>
        <form action="/articles" method="post" class="articleform">
            <fieldset>
                <input type="text" name="title" id="" placeholder="enter title">
                <textarea name="description" id="" cols="30" rows="10" placeholder="enter description"></textarea>
                <input type="text" name="tags" id="" placeholder="enter tags">
                <input type="text" name="author" id="" placeholder="enter author">
                <input type="number" name="likes" id="" placeholder="enter likes">
                <input type="submit" value="add article and show list of articles">
            </fieldset>
        </form>
    </div>
</main>
